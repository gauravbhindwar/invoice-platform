# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Production Database (Google Cloud MongoDB Atlas or Cloud SQL)
MONGO_URI=${MONGO_CONNECTION_STRING}
MONGO_DB=invoice-platform

# MongoDB Authentication (for production)
MONGO_ROOT_USERNAME=${MONGO_ROOT_USERNAME}
MONGO_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD}

# Auth (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=${JWT_SECRET_KEY}

# CORS for production (Replace with your actual domain)
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# Traefik URLs (through load balancer/ingress)
API_GATEWAY_URL=https://api.yourdomain.com
AUTH_SERVICE_URL=https://auth.yourdomain.com
INVOICES_SERVICE_URL=https://invoices.yourdomain.com
CUSTOMERS_SERVICE_URL=https://customers.yourdomain.com
EXPENSES_SERVICE_URL=https://expenses.yourdomain.com
INVENTORY_SERVICE_URL=https://inventory.yourdomain.com
DASHBOARD_SERVICE_URL=https://dashboard.yourdomain.com
UPLOADS_SERVICE_URL=https://uploads.yourdomain.com
TAX_SERVICE_URL=https://tax.yourdomain.com
AI_SERVICE_URL=https://ai.yourdomain.com

# Internal service URLs (for Docker/K8s/Cloud Run internal networking)
AUTH_SERVICE_URL_INTERNAL=http://auth-service:3001
INVOICES_SERVICE_URL_INTERNAL=http://invoices-service:3002
CUSTOMERS_SERVICE_URL_INTERNAL=http://customers-service:3003
EXPENSES_SERVICE_URL_INTERNAL=http://expenses-service:3004
INVENTORY_SERVICE_URL_INTERNAL=http://inventory-service:3005
DASHBOARD_SERVICE_URL_INTERNAL=http://dashboard-service:3006
UPLOADS_SERVICE_URL_INTERNAL=http://uploads-service:3007
TAX_SERVICE_URL_INTERNAL=http://tax-service:3008
AI_SERVICE_URL_INTERNAL=http://ai-service:3009

# File upload limits (Cloud Storage for GCP)
MAX_FILE_SIZE=10MB
UPLOAD_PATH=gs://your-bucket-name/uploads

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session configuration
SESSION_SECRET=${SESSION_SECRET_KEY}

# Cloud configuration (for GCP deployment)
GCP_PROJECT_ID=${GCP_PROJECT_ID}
GCP_REGION=${GCP_REGION}
GOOGLE_APPLICATION_CREDENTIALS=${GOOGLE_APPLICATION_CREDENTIALS}

# Redis (Google Cloud Memorystore or Cloud Redis)
REDIS_URL=${REDIS_CONNECTION_STRING}

# Health check configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30s
