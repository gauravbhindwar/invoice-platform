# Development Environment Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Development Database
MONGO_URI_DEV=mongodb://localhost:27018/invoice-platform-dev
MONGO_URI=mongodb://localhost:27017/invoice-platform
MONGO_DB=invoice-platform
MONGO_DB_DEV=invoice-platform-dev

# MongoDB Authentication (for Docker)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# Auth
JWT_SECRET=dev-secret-change-in-production

# CORS for development (Traefik + local development)
CORS_ORIGIN=http://localhost,http://localhost:80,http://localhost:3000,http://localhost:5173,http://localhost:8080

# Traefik URLs (through single port 80)
API_GATEWAY_URL=http://localhost
AUTH_SERVICE_URL=http://auth.localhost
INVOICES_SERVICE_URL=http://invoices.localhost
CUSTOMERS_SERVICE_URL=http://customers.localhost
EXPENSES_SERVICE_URL=http://expenses.localhost
INVENTORY_SERVICE_URL=http://inventory.localhost
DASHBOARD_SERVICE_URL=http://dashboard.localhost
UPLOADS_SERVICE_URL=http://uploads.localhost
TAX_SERVICE_URL=http://tax.localhost
AI_SERVICE_URL=http://ai.localhost

# Internal service URLs (for Docker networking)
AUTH_SERVICE_URL_INTERNAL=http://auth-service:3001
INVOICES_SERVICE_URL_INTERNAL=http://invoices-service:3002
CUSTOMERS_SERVICE_URL_INTERNAL=http://customers-service:3003
EXPENSES_SERVICE_URL_INTERNAL=http://expenses-service:3004
INVENTORY_SERVICE_URL_INTERNAL=http://inventory-service:3005
DASHBOARD_SERVICE_URL_INTERNAL=http://dashboard-service:3006
UPLOADS_SERVICE_URL_INTERNAL=http://uploads-service:3007
TAX_SERVICE_URL_INTERNAL=http://tax-service:3008
AI_SERVICE_URL_INTERNAL=http://ai-service:3009

# File upload limits
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=dev-session-secret

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379
