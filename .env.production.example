# Production Environment Variables for Invoice Platform
# Copy this file to .env.production and update the values

# Project Configuration
PROJECT_ID=invoicebackend
REGION=asia-south1
NODE_ENV=production


# Database Configuration
# Update with your MongoDB Atlas connection string
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/invoice-platform?retryWrites=true&w=majority

# Security Configuration
# Generate a secure random string (minimum 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-here

# CORS Configuration
# Update with your actual frontend domain(s)
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Service Configuration
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
CUSTOMERS_SERVICE_PORT=3002
INVOICES_SERVICE_PORT=3003
INVENTORY_SERVICE_PORT=3004
EXPENSES_SERVICE_PORT=3005
TAX_SERVICE_PORT=3006
UPLOADS_SERVICE_PORT=3007
DASHBOARD_SERVICE_PORT=3008
AI_SERVICE_PORT=3009

# Optional: Additional Configuration
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Cloud Storage (if using Google Cloud Storage for file uploads)
CLOUD_STORAGE_BUCKET=your-storage-bucket-name

# Monitoring (optional)
ENABLE_MONITORING=true
MONITORING_ENDPOINT=https://monitoring.googleapis.com
