# Environment variables
NODE_ENV=development
LOG_LEVEL=debug

# Gateway configuration
PORT=3000

# Service URLs (for development - localhost; for production - use docker service names)
AUTH_SERVICE_URL=http://localhost:3001
INVOICES_SERVICE_URL=http://localhost:3002
CUSTOMERS_SERVICE_URL=http://localhost:3003
INVENTORY_SERVICE_URL=http://localhost:3004
TAX_SERVICE_URL=http://localhost:3005
UPLOADS_SERVICE_URL=http://localhost:3006
AI_SERVICE_URL=http://localhost:3007
EXPENSES_SERVICE_URL=http://localhost:3008
DASHBOARD_SERVICE_URL=http://localhost:3009

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Proxy Timeouts
PROXY_TIMEOUT=30000
PROXY_CONNECT_TIMEOUT=5000
